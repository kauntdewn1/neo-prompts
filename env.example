# VEO - Video Generation Engine
# Environment Variables Configuration

# =============================================================================
# HUGGING FACE CONFIGURATION
# =============================================================================
# Token de acesso do Hugging Face para baixar modelos
# Obtenha em: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=your_huggingface_token_here

# =============================================================================
# GOOGLE CLOUD CONFIGURATION (Opcional - VEO API removido)
# =============================================================================
# Chave da API do Google (não mais necessária)
# GOOGLE_API_KEY=your_google_api_key_here

# ID do projeto Google Cloud (não mais necessário)
# PROJECT_ID=your_project_id_here

# ID numérico do projeto Google Cloud (não mais necessário)
# GOOGLE_CLOUD_PROJECT=your_cloud_project_id_here

# Região do Google Cloud (não mais necessária)
# GOOGLE_CLOUD_REGION=us-central1

# =============================================================================
# VEO CONFIGURATION
# =============================================================================
# Modelo de geração de vídeo (não mais usado)
# VEO_MODEL=veo-3.0-generate-preview

# Diretório de saída dos vídeos
VEO_OUTPUT_DIR=output/videos

# Número máximo de operações concorrentes
VEO_MAX_CONCURRENT=3

# Número de tentativas em caso de erro
VEO_RETRY_ATTEMPTS=3

# Nível de log (DEBUG, INFO, WARNING, ERROR)
VEO_LOG_LEVEL=INFO

# =============================================================================
# VIDEO GENERATION SETTINGS
# =============================================================================
# Duração padrão do vídeo (em segundos)
VEO_DEFAULT_DURATION=8

# Número padrão de vídeos por geração
VEO_DEFAULT_COUNT=1

# Proporção de tela padrão (LANDSCAPE, PORTRAIT, SQUARE)
VEO_DEFAULT_ASPECT_RATIO=LANDSCAPE

# Geração de pessoas (ALLOW_ADULT, ALLOW_MINOR, BLOCK_ALL)
VEO_PERSON_GENERATION=ALLOW_ADULT

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
# Dispositivo para geração (cuda, cpu, auto)
VEO_DEVICE=auto

# Usar memória eficiente (true, false)
VEO_LOW_MEMORY=true

# Qualidade de geração (high, medium, low)
VEO_QUALITY=high

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# Bucket GCS para armazenamento (não mais usado)
# VEO_GCS_BUCKET=your_bucket_name

# Diretório local para cache de modelos
VEO_CACHE_DIR=~/.cache/veo

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Modo de desenvolvimento (true, false)
VEO_DEBUG=false

# Usar mock em caso de falha (true, false)
VEO_USE_MOCK=true

# Salvar logs em arquivo (true, false)
VEO_LOG_TO_FILE=false

# Diretório de logs
VEO_LOG_DIR=logs

# =============================================================================
# API RATE LIMITING
# =============================================================================
# Delay entre requisições (em segundos)
VEO_REQUEST_DELAY=1

# Timeout para requisições (em segundos)
VEO_REQUEST_TIMEOUT=300

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Webhook para notificações (opcional)
# VEO_WEBHOOK_URL=https://your-webhook-url.com

# Email para notificações (opcional)
# VEO_NOTIFICATION_EMAIL=your-email@example.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Chave secreta para assinatura de tokens
# VEO_SECRET_KEY=your_secret_key_here

# Permitir CORS (true, false)
VEO_ALLOW_CORS=false

# Lista de IPs permitidos (separados por vírgula)
# VEO_ALLOWED_IPS=127.0.0.1,192.168.1.0/24