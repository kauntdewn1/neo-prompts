from gtts import gTTS
import IPython.display as ipd

# Texto para narração
texto = """
Não vim ensinar. Vim sobreviver.
E cada frag vale mais que motivação.
Se entendeu… entra.
"""

# Gerar áudio com gTTS (voz em português)
tts = gTTS(text=texto, lang='pt-br')
audio_path = "/mnt/data/recruta_narracao.mp3"
tts.save(audio_path)

# Reproduzir o áudio
ipd.Audio(audio_path)
